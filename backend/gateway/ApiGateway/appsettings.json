{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "auth-route": {
                "ClusterId": "auth-cluster",
                "Match": { "Path": "/api/auth/{**catch-all}" },
                "Transforms": [ { "PathPattern": "/api/auth/{**catch-all}" } ]
            },
            "hr-employees-route": {
                "ClusterId": "hr-cluster",
                "Match": { "Path": "/api/hr/employees/{**catch-all}" },
                "Transforms": [ { "PathPattern": "/api/Employees/{**catch-all}" } ]
            },
            "hr-attendance-route": {
                "ClusterId": "hr-cluster",
                "Match": { "Path": "/api/Attendance/{**catch-all}" },
                "Transforms": [ { "PathPattern": "/api/Attendance/{**catch-all}" } ]
            },
            "hr-leave-route": {
                "ClusterId": "hr-cluster",
                "Match": { "Path": "/api/Leave/{**catch-all}" },
                "Transforms": [ { "PathPattern": "/api/Leave/{**catch-all}" } ]
            },
            "hr-performance-route": {
                "ClusterId": "hr-cluster",
                "Match": { "Path": "/api/PerformanceReview/{**catch-all}" },
                "Transforms": [ { "PathPattern": "/api/PerformanceReview/{**catch-all}" } ]
            },
            "hr-employeeselfservice-route": {
                "ClusterId": "hr-cluster",
                "Match": { "Path": "/api/EmployeeSelfService/{**catch-all}" },
                "Transforms": [ { "PathPattern": "/api/EmployeeSelfService/{**catch-all}" } ]
            },
            "inventory-products-route": {
                "ClusterId": "inventory-cluster",
                "Match": { "Path": "/api/inventory/products/{**catch-all}" },
                "Transforms": [ { "PathPattern": "/api/Products/{**catch-all}" } ]
            },
            "sales-route": {
                "ClusterId": "sales-cluster",
                "Match": { "Path": "/api/sales/{**catch-all}" },
                "Transforms": [ { "PathPattern": "/api/Sales/{**catch-all}" } ]
            },
            "procurement-route": {
                "ClusterId": "procurement-cluster",
                "Match": { "Path": "/api/procurement/{**catch-all}" },
                "Transforms": [ { "PathPattern": "/api/Procurement/{**catch-all}" } ]
            },
            "payroll-route": {
                "ClusterId": "payroll-cluster",
                "Match": { "Path": "/api/payroll/{**catch-all}" },
                "Transforms": [ { "PathPattern": "/api/Payroll/{**catch-all}" } ]
            },
            "accounting-route": {
                "ClusterId": "accounting-cluster",
                "Match": { "Path": "/api/accounting/{**catch-all}" },
                "Transforms": [ { "PathPattern": "/api/Accounting/{**catch-all}" } ]
            }
        },
        "Clusters": {
            "auth-cluster": { "Destinations": { "d1": { "Address": "http://localhost:5132" } } },
            "hr-cluster": { "Destinations": { "d1": { "Address": "http://localhost:5016" } } },
            "inventory-cluster": { "Destinations": { "d1": { "Address": "http://localhost:5135" } } },
            "sales-cluster": { "Destinations": { "d1": { "Address": "http://localhost:5023" } } },
            "procurement-cluster": { "Destinations": { "d1": { "Address": "http://localhost:5172" } } },
            "payroll-cluster": { "Destinations": { "d1": { "Address": "http://localhost:5162" } } },
            "accounting-cluster": { "Destinations": { "d1": { "Address": "http://localhost:5104" } } }
        }
    }
}